<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".vista.LoginActivity">




<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="133dp"
        android:layout_height="125dp"
        android:layout_marginTop="32dp"
        android:src="@mipmap/ic_launcher_round"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/tvBemVindo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/tvBemVindo"
        android:textSize="36sp"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/etMail"
        style="@style/AppTheme.TextViewEditTextCentral"
        android:hint="@string/Email"
        android:inputType="textEmailAddress"
        android:layout_marginTop="12dp"
        />

    <EditText
        android:id="@+id/etPassword"
        style="@style/AppTheme.TextViewEditTextCentral"
        android:hint="@string/Pass"
        android:inputType="textPassword"
        android:layout_marginTop="3dp"
        />

    <Button
        android:id="@+id/bttLogin"
        android:text="@string/Login"
        style="@style/AppTheme.TextViewBotaoCentral"
        android:layout_marginTop="4dp"
        />

</LinearLayout>
<androidx.constraintlayout.widget.ConstraintLayout
android:layout_width="match_parent"
android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvRegisto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/tvRegisto"
        app:layout_constraintBottom_toTopOf="@+id/bttRegisto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/bttRegisto"
        style="@style/AppTheme.TextViewBotaoCentral"
        android:text="@string/Registo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>